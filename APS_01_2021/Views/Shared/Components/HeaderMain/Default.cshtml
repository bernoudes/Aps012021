@{ 
    Layout = null;
}

<div class="header-main-user">
    <h2><strong>ChatSimples</strong></h2>
    <div class="header-main-button-group">
        <div class="header-main-btn-group-text" >@User.Identity.Name</div>
        <div class="btn-group">
            <button type="button" class="dropdown-toggle m-button" data-toggle="dropdown" 
                    aria-haspopup="true" aria-expanded="false">
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                <button class="dropdown-item" type="button">Alterar Informações</button>
                <button class="dropdown-item" type="button">Convites</button>
                <a class="dropdown-item" type="button" 
                   asp-area="" asp-controller="User" asp-action="Logout">
                    Sair
                </a>
            </div>
        </div>
    </div>
</div>

