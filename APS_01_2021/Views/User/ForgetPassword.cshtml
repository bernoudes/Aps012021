@model APS_01_2021.Models.User
@{
    ViewData["Title"] = "ForgetPassword";
}

<div class="allpage">
    <div class="login_block">
        <form action="/" method="post">
            <h2>Página de Login</h2>
            <label for="iNickOrEmailForget">Apelido ou Email</label>
            <input type="text" id="iNickOrEmailForget" class="form-control" placeholder="Digite o apelido ou email aqui" />

            <div class="d-flex flex-column align-items-center" role="group">
                <button type="button" class="btn btn-success mb-3 mt-3">Enviar para o email</button>
            </div>
        </form>
    </div>
</div>